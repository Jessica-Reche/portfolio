---
import Card from '@components/ui/Card.astro';
import { getCollection } from 'astro:content';
//import { Debug } from 'astro/components';

const projects = await getCollection('projects', ({ data }) => {
    return !data.inProgress;
});
---

<!-- <div>
    <Debug {projects} />
</div> -->
<div class="w-full relative group flex items-center justify-center" id="carousel">
    {
        projects.map((slide, index) => (
            <div
                id={`slide-${index}`}
                style={`display: ${index === 0 ? 'block' : 'none'}`}
                class="slide flex max-w-2xl items-center justify-center rounded-2xl bg-cover bg-center duration-500 "
            >
                <div class="card-wrapper">
                    <Card
                        urlWeb={slide.data.web_url}
                        url={slide.data.links}
                        title={slide.data.title}
                        alt={slide.data.img_alt ?? ''}
                        tags={slide.data.tags}
                    />
                </div>
            </div>
        ))
    }

    <button
        type="button"
        class="control absolute top-0 left-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none"
        data-direction="prev"
        ><span
            class="inline-flex items-center justify-center w-12 h-12 rounded-full sm:w-16 sm:h-16 bg-black/75 dark:bg-white/75   dark:group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none"
        >
            <svg
                aria-hidden="true"
                class="w-8 h-8 text-white sm:w-10 sm:h-10 dark:text-black"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 19l-7-7 7-7"></path>
            </svg>
            <span class="sr-only">Previous</span>
        </span>
    </button>
    <button
        type="button"
        class="control absolute top-0 right-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none"
        data-direction="next"
    >
        <span
            class="inline-flex items-center justify-center w-12 h-12 rounded-full sm:w-16 sm:h-16 bg-black/75 dark:bg-white/75  dark:group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none"
        >
            <svg
                aria-hidden="true"
                class="w-8 h-8 text-white sm:w-10 sm:h-10 dark:text-black"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5l7 7-7 7"></path>
            </svg>
            <span class="sr-only">Next</span>
        </span>
    </button>
</div>

<script>
    const slides = document.querySelectorAll('.slide');
    let currentSlide = 0;
    const numSlides = slides.length;

    const controls = document.querySelectorAll('.control');
    controls.forEach((control: HTMLElement) =>
        control.addEventListener('click', function () {
            (slides[currentSlide] as HTMLElement).style.display = 'none';

            if (this.dataset.direction === 'next') {
                currentSlide = (currentSlide + 1) % numSlides;
            } else {
                currentSlide = (currentSlide - 1 + numSlides) % numSlides;
            }
            (slides[currentSlide] as HTMLElement).style.display = 'block';
        })
    );
</script>

<style>
    #carousel::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('../assets/images/descargar.svg');
        background-size: cover;
        filter: blur(70px);
        z-index: -1;
    }
</style>
