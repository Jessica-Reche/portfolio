---
import projectImage from '@assets/images/natural-cherry.png';
import { Image } from '@astrojs/image/components';
import Tags from '@components/ui/Tags.astro';

interface Props {
	title: string;
	alt: string ;
	tags: string[] ;
	urlWeb: string | undefined;
	url: { url: string; label: string }[] | undefined;
	children?: HTMLElement | HTMLElement[];
}
const { alt , title , tags , urlWeb, url} = Astro.props;
---

<section class="w-full p-4 md:w-1/2 lg:w-1/3">
	<article
		data-testId="card"
		class="rounded-xl bg-white p-3 shadow-lg duration-100 hover:scale-105 hover:transform hover:shadow-xl"
	>
		<a target="_blanck" href={urlWeb} aria-label="link to project">
		
			<div class="relative flex items-end overflow-hidden rounded-xl">
				<Image
					src={projectImage}
					alt={alt}
					aspectRatio="4:4"
					format="png"
					width={400}
					height={400}
					loading="eager"
				/>
			</div>
			<div class="px-6 pt-4 pb-2">
				{
					url?.map(({ url, label }) => (
						<>
							<a
								href={url}
								target="_blank"
								rel="noopener noreferrer"
								class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2"
							>
								{label}
							</a>
						</>
						
					))

					
				}
			</div>
			<div class="mt-1 p-2">
				<h3 class="text-xl text-violet lg:text-2xl">{title}</h3>
				<Tags tags={tags} />
			</div>
		</a>
	</article>
</section>
