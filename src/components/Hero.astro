---
import Foto from '@assets/images/Foto.astro';
import Button from '@components/ui/Button.astro';
---

<section data-testid="hero" class="flex flex-col-reverse items-center justify-center text-center lg:flex-row relative">
	<div class="fondo mt-10 flex flex-col items-center lg:mb-0 lg:w-1/2 lg:mt-0">
	  <h1 class="mb-0 font-sans font-bold text-3xl dark:bg-gradient-to-r dark:from-[#9ad4ff] dark:to-[#e3e4e5] bg-gradient-to-r from-[#286cf2] to-[#858484] text-transparent bg-clip-text lg:text-5xl">
		Full-Stack Web developer
	  </h1>
	  <h1 class="mb-10 text-lg text-obscure dark:text-white">
		Especializada en JavaScript y testing
	  </h1>
	</div>
	<div data-testid="hero-img" class="mt-10 mb-0 inline-block w-full sm:w-2/3  md:w-2/3 mLg:w-1/2 lg:w-1/2 xl:w-1/2">
	  <div class="relative" style="width: 100%; padding-bottom: 100%;">
		<div class="absolute inset-0 flex justify-center items-center">
		  <Foto class="w-full h-auto" />
		</div>
	  </div>
	</div>
  </section>
  
  
  
  <style>
	[data-testid="hero"]{
		position: relative;
	}
  
	[data-testid="hero"]::before {
	content: "";
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background-image: url('../assets/images/descargar.svg');
	background-size: cover;
	filter: blur(300px) ;
	z-index: -1;

  }
  .fondo {
	position: relative;
  }
  .fondo::before {
	content: "";
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background-image: url('../assets/images/descargar.svg');
	background-size: cover;
	filter: blur(80px) ;
	z-index: -1;
	
  }








  
  </style>