---
import Projects from './Projects.astro';
---

<section id="projects" class="py-6 flex flex-col items-center lg:py-48 lg:w-full">
    <div
        data-testid="projects-header"
        class="flex w-full flex-col items-center justify-center lg:mb-5 lg:w-1/2"
    >
        <h2
            class="font-sans text-2xl gradient-secondary-light dark:gradient-secondary-dark text-transparent bg-clip-text lg:text-4xl"
        >
            Proyectos
        </h2>
        <span class="mb-10 ml-2 h-1 w-10 bg-pinky"></span>
    </div>

    <div
        data-testid="projects"
        class="flex flex-col items-center md:w-full text-black dark:text-white lg:w-full"
    >
        <Projects />
    </div>
</section>

